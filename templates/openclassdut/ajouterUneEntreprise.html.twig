{% extends 'base.html.twig' %}

{% block navbar %}
    <a class="nav-item nav-link " href="{{ path('accueil') }}">Accueil <span class="sr-only">(current)</span></a>
    <a class="nav-item nav-link " href="{{ path('stage') }}">Stages <span class="sr-only">(current)</span></a>
    <a class="nav-item nav-link " href="">Entreprises <span class="sr-only">(current)</span></a>                                
    <a class="nav-item nav-link " href="{{ path('formations') }}">Formations <span class="sr-only">(current)</span></a>
    <a class="nav-item nav-link active " href="{{ path('ajouterUneEntreprise') }}">Ajouter une entreprise <span class="sr-only">(current)</span></a>               
{% endblock %}
{% block formulaire %}
    {{ form_start (vueFormulaireEntreprise) }}
        <div>
                {{ form_label (vueFormulaireEntreprise.nom) }} 
                {{ form_errors (vueFormulaireEntreprise.nom) }}
                <br> 
                {{ form_widget (vueFormulaireEntreprise.nom, {'attr':{'placeholder':"Nom de l'entreprise"}}) }} 
        </div>
            <br>
        <div>
                {{ form_label (vueFormulaireEntreprise.activite) }} 
                {{ form_errors (vueFormulaireEntreprise.activite) }} 
                <br>
                {{ form_widget (vueFormulaireEntreprise.activite, {'attr':{'placeholder':"Domaine d'activit√© de l'entreprise"}}) }} 
        </div>
            <br>
        <div>
                {{ form_label (vueFormulaireEntreprise.adresse) }} 
                {{ form_errors (vueFormulaireEntreprise.adresse) }}
                <br> 
                {{ form_widget (vueFormulaireEntreprise.adresse, {'attr':{'placeholder':"Adresse postale de l'entreprise"}}) }} 
        </div>
            <br>
        <div>
                {{ form_label (vueFormulaireEntreprise.site) }} 
                {{ form_errors (vueFormulaireEntreprise.site) }} 
                <br>
                {{ form_widget (vueFormulaireEntreprise.site, {'attr':{'placeholder':"Adresse URL du site de l'entreprise"}}) }} 
                            
        </div>
            <br>
        <div>
            <button type="submit" class="btn btn-success">Enregistrer</button>
        </div>
    {{ form_end (vueFormulaireEntreprise) }}

{% endblock %}