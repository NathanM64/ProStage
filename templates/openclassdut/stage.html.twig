{% extends 'base.html.twig' %}



{% block titrePage %}

Liste de tous les stages

{% endblock %}
{% block enTeteTableau %}
<thead>
    <tr>
        <th>
            Titre
        </th>
        <th>
            Proposé par
        </th>
        <th>
            Types de formation
        </th>
        
        <th>
            à propos
        </th>
    </tr>
</thead>
{% endblock %}

{% block elementTab  %}
<tbody>
    {% for stage in listeStages %}

        <tr>
            <td>
                {{stage.titre}}
            </td>
            <td>
                {{stage.entreprise.nom}}
            </td>
            <td>
                {% for formation in stage.formations %}
                  
                    {{formation.libelle}}<br>

                {% endfor %}
            </td>
            
            <td>
                <a href= "{{path('stageDetaille',{id:stage.id})}}">Plus d'information </a>
            </td>
            
        </tr>
</tbody>
    {% endfor %}



{% endblock %}